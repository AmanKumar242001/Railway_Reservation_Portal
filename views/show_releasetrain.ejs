<!DOCTYPE html>
<html>
<head>
  <title>Trains</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
    }

    body {
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 100vh;
      background-color: #f5f5f5;
      background: url("train1.jpg") no-repeat center center fixed;
        background-size: cover;
    }

    .container {
      max-width: 1400px;
      min-width: 1100px;
      background-color: #fff;
      border-radius: 4px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
      padding: 20px;
      margin-top: 30px;
    }

    .logout-btn {
      position: absolute;
      top: 10px;
      right: 10px;
      background-color: #6c63ff;
      color: white;
      border: none;
      padding: 10px 20px;
      cursor: pointer;
      font-size: 16px;
      border-radius: 4px;
      transition: background-color 0.2s;
    }

    .logout-btn:hover {
      background-color: #4b46e0;
    }

    .show-message {
      text-align: center;
      margin-top: 20px;
      padding: 10px;
      background-color: #f0f0f0;
      color: #333;
      border: 1px solid #ccc;
      max-width: fit-content; /* Set the maximum width to fit the content */
    }

    .show-message p {
      margin: 0;
    }

    .table-heading {
      background-color: #6c63ff;
      color: white;
      text-align: left;
      padding: 10px;
      
    }

    .show-table {
      width: 100%;
      margin-top: 20px;
      border-collapse: collapse;
      
    }

    .show-table th,
    .show-table td {
      padding: 10px;
      border-bottom: 1px solid #ccc;
      text-align: left;
    }

    .show-table tr:last-child td {
      border-bottom: none;
    }

    .ticket-heading {
      font-size: 24px;
      font-weight: bold;
      margin-top: 20px;
      text-align: center;
    }
  </style>
  </head>
  <body>
    <div class="container">
    <h2 class="ticket-heading">Released Trains</h2>
    <div id="logoutContainer">
      <form action="/logout" method="post">
        <button class="logout-btn" type="submit" name="logout">Logout</button>
      </form>
    </div>
    <table class="show-table">
      <tr class="table-heading">
        <th>Date</th>
        <th>Train No</th>
        <th>AC Available Seats</th>
        <th>Sleeper Available Seats</th>
        <th>Source</th>
        <th>Destination</th>
      </tr>
      <% for(var i=0; i<results.length; i++) {%>
      <tr>
        <td id="<%= i %>"></td>
        <td><%= results[i]['train_no'] %></td>
        <td><%= results[i]['ac_available'] %></td>
        <td><%= results[i]['sleeper_available'] %></td>
        <td><%= results[i]['source'] %></td>
        <td><%= results[i]['destination'] %></td>
      </tr>
      <script>
        document.getElementById("<%= i %>").innerHTML = `<%= results[i]['date'] %>`.slice(0,15);
      </script>
      <% } %>
    </table>
  </div>
  </body>
</html>
